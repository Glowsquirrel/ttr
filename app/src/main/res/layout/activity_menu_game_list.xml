<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fysh340.ticket_to_ride.MenuGameList">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/createGame">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the name of the game you would like to create:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:id="@+id/name"/>
        <EditText
            android:id="@+id/gamename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:inputType="text"
            android:padding="0dp"
            android:layout_alignParentLeft="true"
            android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/maptype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose the Number of Players"
                android:textSize="16dp" />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/player_spinner">

            </Spinner>

    </LinearLayout>
        <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
            android:layout_below="@+id/createGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</RelativeLayout>

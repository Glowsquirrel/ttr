<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="fysh340.ticket_to_ride.game.fragments.DeckFragment"
    android:id="@+id/faceUpCards"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">


    <TextView
        android:id="@+id/faceUpTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/customborder"
        android:text="@string/face_up_title"
        android:textAlignment="center"
        android:textSize="10sp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <TextView
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/customborder"
        android:textAlignment="center"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/customborder"
        android:textAlignment="center"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/customborder"
        android:textAlignment="center"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/fourth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/customborder"
        android:textAlignment="center"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/fifth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/customborder"
        android:textAlignment="center"
        android:textSize="10sp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:columnCount="2"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/trainDeck"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="0"
            android:layout_row="0"
            android:background="@drawable/customborder"
            android:text="@string/deck_face_down"
            android:textAlignment="center"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/destinationDeck"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="0"
            android:layout_row="0"
            android:background="@drawable/customborder"
            android:text="@string/dest_deck"
            android:textAlignment="center"
            android:textSize="10sp"/>

    </GridLayout>

    <Button
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:text="@string/choose_cards"
        android:textSize="10sp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/selectedRouteTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/customborder"
        android:text="@string/selected_route_title"
        android:textAlignment="center"
        android:textSize="10sp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <TextView
        android:id="@+id/selectedRoute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/customborder"
        android:textAlignment="center"
        android:textSize="10sp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <Button
        android:id="@+id/chooseRouteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:text="@string/claim_route"
        android:textSize="10sp"/>



</LinearLayout>


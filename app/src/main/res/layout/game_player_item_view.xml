<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="100dp"
    android:layout_height="match_parent"
    android:background="@drawable/customborder"
    android:paddingRight="1dp"
    android:paddingLeft="1dp"
    android:layout_centerHorizontal="true">



    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:textSize="13sp"
        android:gravity="center|top"
        android:text="myUsername"
        android:ellipsize="end"/>

    <RelativeLayout
        android:id="@+id/trains"
        android:layout_width="50dp"
        android:layout_height="14dp"
        android:layout_below="@id/username">

        <TextView
            android:id="@+id/trainsTag"
            android:text="Trains"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/trainsNum"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:gravity="start"
            android:textAlignment="textStart"
            android:layout_toRightOf="@id/trainsTag"
            android:text="20"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/card"
        android:layout_width="50dp"
        android:layout_height="14dp"
        android:layout_below="@id/username"
        android:layout_toRightOf="@id/trains"
        android:layout_toEndOf="@id/trains">

        <TextView
            android:id="@+id/cardsTag"
            android:text="Cards"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cardsNum"
            android:layout_width="15dp"
            android:gravity="start"
            android:textAlignment="textStart"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:text="888"
            android:layout_toRightOf="@id/cardsTag"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/routes"
        android:layout_width="50dp"
        android:layout_height="14dp"
        android:layout_below="@id/trains">

        <TextView
            android:id="@+id/routesTag"
            android:text="Routes"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/routesNum"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:text="8"
            android:gravity="start"
            android:textAlignment="textStart"
            android:layout_toRightOf="@id/routesTag"/>

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/points"
            android:layout_width="50dp"
            android:layout_height="14dp"
            android:orientation="horizontal"
            android:layout_below="@id/card"
            android:layout_toRightOf="@id/routes">

            <TextView
                android:id="@+id/pointsTag"
                android:text="Score"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/pointsNum"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:gravity="start"
                android:textAlignment="textStart"
                android:textSize="12sp"
                android:text="82"
                android:layout_toRightOf="@id/pointsTag"/>

        </RelativeLayout>

</RelativeLayout>
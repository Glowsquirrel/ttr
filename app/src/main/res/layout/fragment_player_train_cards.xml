<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.fragments.TrainCardPresenter">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"
        android:id="@+id/train_card_linear_layout">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:text="0"
            android:id="@+id/cards_red"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:background="@color/blue"
            android:text="0"
            android:id="@+id/cards_blue"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:background="@color/green"
            android:text="0"
            android:id="@+id/cards_green"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:background="@color/yellow"
            android:text="0"
            android:id="@+id/cards_yellow"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:background="@color/black"
            android:text="0"
            android:id="@+id/cards_black"/>


        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:background="@color/purple"
            android:text="0"
            android:id="@+id/cards_purple"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:background="@color/orange"
            android:text="0"
            android:id="@+id/cards_orange"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="0"
            android:id="@+id/cards_white"/>





        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:background="@drawable/rainbow"
            android:text="0"
            android:id="@+id/cards_wild"/>

        <Button
            android:id="@+id/player_switch_cards_button"
            android:layout_width="0dp"
            android:layout_weight="28"
            android:textSize="13sp"
            android:layout_height="match_parent"
            android:text="@string/train_card"
            />

    </LinearLayout>

</FrameLayout>
